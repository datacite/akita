{
  "github": {
    "enabled": false
  },
  "rewrites": [
    {
      "source": "/api/ror/:path*",
      "destination": "https://api.ror.org/:path*"
    },
    {
      "source": "/api/download-reports/:path*",
      "destination": "/download-reports/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/app"
    }
  ],
  "functions": {
     "src/app/download-reports/**/*": {
      "memory": 512,
      "maxDuration": 30
    },
    "src/pages/**/*": {
      "memory": 512,
      "maxDuration": 8
    },
    "src/app/ror.org/[rorid]/page.tsx": {
      "memory": 512,
      "maxDuration": 15
    },
    "src/app/**/*": {
      "memory": 512,
      "maxDuration": 16
    },
    "api/**/*.py": {
      "excludeFiles": "{cypress,src,.next,.vercel,.github,.git,*.cache,node_modules,public,app}/**"
    }
  }
}
